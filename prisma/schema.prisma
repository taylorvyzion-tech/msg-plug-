datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}
model Business {
  id        Int      @id @default(autoincrement())
  name      String
  industry  String?
  chatbots  Chatbot[]
  createdAt DateTime @default(now())
}

model Chatbot {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  businessId  Int
  business    Business @relation(fields: [businessId], references: [id])
  createdAt   DateTime @default(now())
}
